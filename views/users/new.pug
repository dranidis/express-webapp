extends ../layout

block content
  h1= 'New User'
  form(action='/users', method='POST')
    div
      label Email 
      input(type='text', name='email', value=user.email, required)
    div
      label Password 
      input(type='password', name='password', value=user.password, required)
    a(href='/users') Cancel
    button(type='submit') Create

  p #{error}
